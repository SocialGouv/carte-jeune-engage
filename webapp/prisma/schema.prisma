generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  ALIMENTATION // Alimentation
  HYGIENE // Hygiène
  SOINS // Soins
  MOBILITE // Mobilité
  SPORT // Sport
  CULTURE_LOISIRS // Culture et loisirs
  LOGEMENT // Logement
  NUMERIQUE // Numérique
  BANQUE // Banque
  ASSURANCE // Assurance
}

enum OfferKind {
  PEJ
  EYCA
  SOLIDAIRE
}

model User {
  id        String  @id @default(cuid())
  firstName String?
  lastName  String?
  email     String? @unique
  password  String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Partner {
  id           String    @id @default(cuid())
  name         String?
  url          String?
  published    Boolean   @default(false)
  published_at DateTime?
  image        String?

  categories Category[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Offer {
  id          String  @id @default(cuid())
  title       String?
  description String?

  url          String?
  published    Boolean   @default(false)
  published_at DateTime?
  image        String?

  kind       OfferKind
  categories Category[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
